@model EOTC.Boston.MedhaneAlem.DataLayer.UserLogin
@{
    ViewBag.Title = "User Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <div>List of Login Users</div>
    </div>
    <div class="panel-body">
        <table class="table table-bordered">
            <tr>
                <th>UserName</th>
                <th>Password</th>
                <th>Email</th>
                <th>Phone</th>
                <th class="text-center"><strong>Actions</strong></th>
            </tr>
           @Html.ValidationMessageFor(model => model.UserID, "", new { @class = "text-danger" })
            @if(@Model.MemberID != null)
            
            {
                <tr>
                    <td class="text-left">@Model.UserID</td>
                    <td class="text-left">@Model.Password</td>
                    <td class="text-left">@Model.Email</td>
                    <td class="text-left">@Model.Phone</td>
                   

                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Admin"))
                        {
                            @Html.Hidden("MemberId", @Model.MemberID)

                            <input type="submit" onclick="return confirm('Delete this record?')"
                                   class=" btn btn-danger btn-xs"
                                   value="Delete" />
                        }
                    </td>
                </tr>
            }
        </table>
    </div>
</div>