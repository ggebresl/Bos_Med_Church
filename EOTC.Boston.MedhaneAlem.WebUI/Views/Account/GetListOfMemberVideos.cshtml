@model IEnumerable<EOTC.Boston.MedhaneAlem.Common.Common.VideoFile>

@{
    ViewBag.Title = "List Of Video to Watch!";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<hr />
<div>
    @Html.ActionLink("GoBack to Audio/Video Selection", "Index", "Mode")
</div>
<div class="panel panel-default">
    <div class="panel-heading">
        <div>List of Vido Files</div>
    </div>
    <div class="panel-body">
        <table border="1" width="100%" height="70%" valign="top">
          
            <tr>
                <th>Vido File Name(s)</th>
                <th>Click on each Video </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">@item.FileName</td>
                    <td>
                        <video id="video" width="320" height="240" controls="controls">
                            <source src="@Url.Content("~/MemberVideo/" + item.FileName)" type="video/mp4">
                        </video>
                    </td>
                </tr>
            }
        </table>
    </div>

</div>