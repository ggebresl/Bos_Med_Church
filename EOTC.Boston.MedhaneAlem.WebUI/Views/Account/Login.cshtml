@model EOTC.Boston.MedhaneAlem.DataLayer.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-dfault">
    <div class="panel-heading">
        <h3>Log in</h3>
    </div>

    <div class="panel-body">
        <p class="lead">
            Please Log in to Zema Page:
        </p>
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()
            <div class="form-group">
                <label><strong>User Name:</strong></label>
                @Html.TextBoxFor(u => u.UserID, new { @class = "form-control", @style = "width:300px" })
            </div>
            <div class="form-group">
                <label><strong>Password:</strong></label>
                 @Html.TextBoxFor(u => u.Password, new { @class = "form-control", @type = "password", @style="width:300px" })
            </div>     
               <input type="submit" value="Log in" class="btn btn-primary" />
        }
    </div>
    @*<p>Total Number of visitors: @ApplicationInstance.Application["Totaluser"]</p>*@
</div>
